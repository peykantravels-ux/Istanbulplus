            "url": {
              "raw": "{{base_url}}/auth/verify-phone/confirm/",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify-phone", "confirm", ""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Session Management",
      "item": [
        {
          "name": "List Active Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
